<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="OrderMat.css">
  <c:DockLayout>
  <c:DockLayout>
      <c:EditText Id="Comment" CssClass="LargeView"></c:EditText>
  </c:DockLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$DoBack()">
         <c:Image/>
        <c:TextView Text="#back#"/>
      </c:HorizontalLayout>
				<c:HorizontalLayout CssClass="btn_forward" OnEvent="Back" OnClickAction="$DoNextStep($param1)"> <!-- $DoAction(tasks, $event) -->
				<c:TextView Text="#next#"/>
				</c:HorizontalLayout>
      <c:HorizontalLayout>
        <c:TextView Text="#eventComment#" />
      </c:HorizontalLayout>
    </c:DockLayout>
    <c:DockLayout CssClass="footer">
      <c:DockLayout CssClass="btn_bottom_footer" OnClickAction="$DoAction(AddWork)">
        <c:TextView Text="#add#" />
      </c:DockLayout>
    </c:DockLayout>



  </c:DockLayout>
</c:Screen>
