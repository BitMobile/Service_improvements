<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="OrderMat.css">
<c:DockLayout>
  <c:DockLayout CssClass="top_navigator">
    <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$DoBack()">
      <c:Image/>
      <c:TextView Text="#back#"/>
    </c:HorizontalLayout>
    <c:Button Id="btnForward" Text="" CssClass="btn_forward"/>
    <c:HorizontalLayout>
      <c:TextView Text="#OrderMat#" />
    </c:HorizontalLayout>
  </c:DockLayout>
  <c:HorizontalLine/>

  <c:HorizontalLayout CssClass="head_mat">
      <c:TextView Id= "Description" CssClass="main_row_top"></c:TextView>
  </c:HorizontalLayout>
  <c:HorizontalLine/>
  <c:HorizontalLayout CssClass="stat">

      <c:TextView Id= "StatDesv" Text="#Status#" CssClass="main_row"></c:TextView>

  </c:HorizontalLayout>
  <c:HorizontalLine/>

  <c:ScrollView>
    <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#materials#"></c:TextView>
    </c:HorizontalLayout>
      <s:Iterator Id="OrderMat" Value="$GetAllMat()">
        <c:DockLayout CssClass="grid">
          <c:VerticalLayout>
          <c:HorizontalLayout>
            <c:TextView Id="viewDesc" Text="$OrderMat.Matireals.Description" CssClass="description_row"></c:TextView>
            <c:TextView Id="viewCount" Text="$OrderMat.Count" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>
        </c:VerticalLayout>
        </c:DockLayout>
        <c:HorizontalLine/>

      </s:Iterator>
  </c:ScrollView>

</c:DockLayout>
</c:Screen>
