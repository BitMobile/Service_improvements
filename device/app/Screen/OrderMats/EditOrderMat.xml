<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="OrderMat.css">
<c:DockLayout>
  <c:DockLayout CssClass="top_navigator">
    <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$DoBack()">
      <c:Image/>
      <c:TextView Text="#back#"/>
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="btn_forward" OnEvent="Back" OnClickAction="$ActionDoCommit()">
      <c:TextView Text="#formed#"/>
    </c:HorizontalLayout>
    <c:HorizontalLayout>
      <c:TextView Text="#OrderMat#" />
    </c:HorizontalLayout>
  </c:DockLayout>
  <c:DockLayout CssClass="footer">
    <c:HorizontalLine/>
    <c:DockLayout CssClass="btn_bottom_footer" OnClickAction="$actionDoSelect()">
      <c:TextView Text="#add#" />
    </c:DockLayout>
  </c:DockLayout>

  <c:HorizontalLine/>

  <c:ScrollView>
      <s:Iterator Id="OrderMat" Value="$GetAllMat()">
        <c:DockLayout CssClass="grid">
          <c:VerticalLayout>
          <c:HorizontalLayout>
            <c:TextView Id="viewDesc" Text="$OrderMat.Matireals.Description" CssClass="description_row"></c:TextView>
            <c:TextView Id="viewCount" Text="$OrderMat.Count" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>
        </c:VerticalLayout>
        </c:DockLayout>
        <c:HorizontalLine/>

      </s:Iterator>
  </c:ScrollView>

</c:DockLayout>
</c:Screen>
