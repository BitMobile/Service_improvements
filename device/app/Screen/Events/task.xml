<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="tasks.css">

	<s:Push Id="task" Value="$param1" />
	<s:Push Id="visitTask" Value="$param3" />

	<c:DockLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout>
				<c:TextView Text="#task#" />
			</c:HorizontalLayout>
		</c:DockLayout>

		<c:HorizontalLine />
		
		<c:HorizontalLayout Id="btnDone" CssClass="bottom_btn" OnEvent="Back" OnClickAction="$DoBack()">
			<c:TextView Text="#ready#" />
		</c:HorizontalLayout>
		<c:HorizontalLine CssClass="b_line" />

		<c:ScrollView Id="grScrollView">
			
			<c:HorizontalLayout CssClass="margin_top" />
			<c:HorizontalLine />
			
			

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#devices#" CssClass="description_row"></c:TextView>
					<c:TextView Text="$task.Equipment.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#Terget#" CssClass="description_row"></c:TextView>
					<c:TextView Text="$task.Terget" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="memo_block">
				<c:VerticalLayout>
					<c:TextView Text="#Comment#" CssClass="description_row"></c:TextView>
					<c:TextView Text="$task.Comment" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="end_of_block" />

			<c:HorizontalLayout CssClass="empty_caption_grid" />
			<c:HorizontalLine />

			<!--<c:VerticalLayout CssClass="half_grid">
				<s:If Test="$task.Result.Name != null">
					<c:Button Text="#noteAsNew#" CssClass="negative_decision" OnClickAction="$RetrieveTask($visitTask.Id)" />
				</s:If>
				<s:Else>
					<c:Button Text="#noteAsExecuted#" CssClass="positive_decision" OnClickAction="$CompleteTheTask($task.Id, $workflow.tasks)" />
				</s:Else>
			</c:VerticalLayout>
			<c:HorizontalLine />-->

			<c:HorizontalLayout CssClass="end_of_block" />

		</c:ScrollView>



	</c:DockLayout>

</c:Screen>